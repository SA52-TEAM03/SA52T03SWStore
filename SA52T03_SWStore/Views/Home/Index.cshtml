@model HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3 backgroundWhite">

    @foreach (var product in Model.Product)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px; height:600px">
                        <img src="@product.Image" class="card-img-top rounded" width="235" height="350" />
                        <div class="card-body">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Name</b></p>
                            <p class="card-text">@product.Description</p>
                            <a class="btn btn-primary" asp-action="AddToCart" asp-route-Id="@product.Id">$@product.Price Add to Cart </a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }

</div>