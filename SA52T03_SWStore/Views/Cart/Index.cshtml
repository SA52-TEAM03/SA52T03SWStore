@model IEnumerable<SA52T03_SWStore.Models.ShoppingCart>
@{
    ViewData["Title"] = "My ShoppingCart";
}
<h3>Shopping Cart</h3>
<hr />

<table width="80%" align="center" cellpadding="30">
    @foreach (ShoppingCart item in Model)
    {
        <tr>
            <td width="40%">
                <div class="card" style="border:1px solid #008cba; border-radius: 5px;" align="center">
                    <p align="center"><img src="@item.Product.Image" width="100" height="120" /></p>
                    <p class="card-title h5"><b style="color:#2c3e50">@item.Product.Name</b></p>
                    <p align="center">@item.Product.Description</p>
                </div>
            </td>
            <td>
                <table>
                    <tr>
                        <td width="30%">
                            Quantity:
                        </td>
                        <td width="30%">
                            <input type="number" style="width:50px" id="quantity" value=@item.Quantity min="1" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Price:
                        </td>
                        <td id="price">
                            $@item.Product.Price;
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    }
</table>